<p>☕️</p>
<% if (alerts.error) { %> 
    <% alerts.error.forEach(function(message) { %>
        <div style="background-color: #f00; color: #fff;">
            <%= message %>
        </div>
    <% }); %>
<% } else if (alerts.success) { %>
    <% alerts.success.forEach(function(message) { %>
        <div style="background: #008800; color: #fff;">
            <%= message %>
        </div>
    <% }); %>
<% } %>